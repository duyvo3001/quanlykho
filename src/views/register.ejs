<!-- Account -->
<form action="/createstaff" method="post">
  <div class="card-body">
    <div class="d-flex align-items-start align-items-sm-center gap-4">
      <img src="../assets/img/avatars/1.png" alt="user-avatar" class="d-block rounded" height="100" width="100"
        id="uploadedAvatar" />
      <div class="button-wrapper">
        <label for="upload" class="btn btn-primary me-2 mb-4" tabindex="0">
          <span class="d-none d-sm-block">Upload new photo</span>
          <i class="bx bx-upload d-block d-sm-none"></i>
          <input type="file" id="upload" class="account-file-input" hidden accept="image/png, image/jpeg" />
        </label>
        <button type="button" class="btn btn-outline-secondary account-image-reset mb-4">
          <i class="bx bx-reset d-block d-sm-none"></i>
          <span class="d-none d-sm-block">Reset</span>
        </button>

        <p class="text-muted mb-0">CHO PHÉP ĐỊNH DẠNG JPG, GIF HOẶC PNG. KHÔNG VƯỢT QUÁ 800K</p>
      </div>
    </div>
  </div>
  <hr class="my-0" />
  <div class="card-body">
    <form id="formAccountSettings" method="POST" onsubmit="return false">
      <div class="row">
        <div class="mb-3 col-md-6">
          <label for="firstName" class="form-label">HỌ VÀ TÊN</label>
          <input class="form-control" type="text" id="firstName" name="hoten" autofocus />
        </div>
        <div class="mb-3 col-md-6">
          <label for="language" class="form-label">GIỚI TÍNH</label>
          <select id="language" name="sex" class="select2 form-select">
            <option value="0">NAM</option>
            <option value="1">NỮ</option>
          </select>
        </div>
        <div class="mb-3 col-md-6">
          <label for="email" class="form-label">NGÀY SINH</label>
          <input class="form-control" type="date" id="email" name="ngaysinh" />
        </div>
        <div class="mb-3 col-md-6">
          <label for="organization" class="form-label">ĐỊA CHỈ</label>
          <input type="text" class="form-control" id="organization" name="address" />
        </div>
        <div class="mb-3 col-md-6">
          <label for="address" class="form-label">USER</label>
          <input type="text" class="form-control" id="address" name="user_nv" />
        </div>
        <div class="mb-3 col-md-6">
          <label for="state" class="form-label">PASSWORD</label>
          <input class="form-control" type="password" id="state" name="pass_nv" />
        </div>
        <div class="mb-3 col-md-6">
          <label for="state" class="form-label">Re PASSWORD</label>
          <input class="form-control" type="password" id="state" name="repass_nv" />
        </div>
        <div class="mb-3 col-md-6">
          <label for="language" class="form-label">VỊ TRÍ</label>
          <select id="language" name="accessrights" class="select1 form-select">
            <option value="truongphong">TRƯỞNG PHÒNG</option>
            <option value="nhanvien">NHÂN VIÊN</option>
          </select>
        </div>
        <div class="mb-3 col-md-6">
          <label class="form-label" for="phoneNumber">SỐ ĐIỆN THOẠI</label>
          <div class="input-group input-group-merge">
            <input type="tel" id="phoneNumber" name="phone" class="form-control" />
          </div>
        </div>
      </div>
      <div class="mt-2">
        <button type="submit" class="btn btn-primary me-2">Save changes</button>
        <button type="reset" class="btn btn-outline-secondary">Cancel</button>
      </div>
    </form>
  </div>
</form>

<!-- /Account -->